# ============================================================
# üåê CONFIGURACI√ìN BASE DE DATOS (TypeORM + PostgreSQL)
# ============================================================
# Host donde corre la base de datos (por ejemplo, localhost o el dominio del servidor)
DB_HOST=localhost

# Puerto del servicio PostgreSQL (por defecto: 5432)
DB_PORT=5432

# Usuario con permisos para acceder a la base de datos
DB_USER=postgres

# Contrase√±a del usuario de la base de datos
DB_PASSWORD=postgres

# Nombre de la base de datos (debe coincidir con la creada en PostgreSQL)
DB_NAME=serviyapp_db


# ============================================================
# ‚òÅÔ∏è CONFIGURACI√ìN CLOUDINARY (para gesti√≥n de im√°genes)
# ============================================================
# Nombre de la nube de Cloudinary (lo encuentras en tu panel de Cloudinary)
CLOUD_NAME=tu_nombre_cloud

# API Key proporcionada por Cloudinary
CLOUD_API_KEY=tu_api_key

# API Secret proporcionado por Cloudinary (mantener privado)
CLOUD_API_SECRET=tu_api_secret


# ============================================================
# üîê CONFIGURACI√ìN JWT (para autenticaci√≥n y sesiones)
# ============================================================
# Clave secreta usada para firmar los tokens JWT
JWT_SECRET=tu_clave_secreta_segura

# Tiempo de expiraci√≥n de los tokens (por ejemplo: "1d" = 1 d√≠a, "2h" = 2 horas)
JWT_EXPIRES_IN=1d


# ============================================================
# üîë GOOGLE AUTH (AUTENTICACI√ìN USUARIOS)
# ============================================================
# Credenciales del cliente OAuth 2.0 para usuarios normales
GOOGLE_USER_CLIENT_ID=tu_client_id_user.apps.googleusercontent.com
GOOGLE_USER_CLIENT_SECRET=tu_client_secret_user

# URL del callback configurada en la consola de Google Cloud
GOOGLE_USER_CALLBACK_URL=http://localhost:3000/auth/google/user/callback


# ============================================================
# üîë GOOGLE AUTH (AUTENTICACI√ìN PROVEEDORES)
# ============================================================
# Credenciales del cliente OAuth 2.0 para proveedores
GOOGLE_PROVIDER_CLIENT_ID=tu_client_id_provider.apps.googleusercontent.com
GOOGLE_PROVIDER_CLIENT_SECRET=tu_client_secret_provider

# URL del callback configurada en la consola de Google Cloud
GOOGLE_PROVIDER_CALLBACK_URL=http://localhost:3000/auth/google/provider/callback


# ============================================================
# üñ•Ô∏è CONFIGURACI√ìN FRONTEND (URLs y redirecciones)
# ============================================================
# URL base del frontend (entorno local o producci√≥n)
FRONTEND_BASE_URL=http://localhost:3000

# Cuando un usuario inicia sesi√≥n con Google pero a√∫n no complet√≥ su perfil
FRONTEND_GOOGLE_USER_INCOMPLETE=${FRONTEND_BASE_URL}/complete-profile/user

# Cuando un proveedor inicia sesi√≥n con Google pero a√∫n no complet√≥ su perfil
FRONTEND_GOOGLE_PROVIDER_INCOMPLETE=${FRONTEND_BASE_URL}/complete-profile/provider

# Pantalla de inicio para usuarios autenticados
FRONTEND_USER_HOME=${FRONTEND_BASE_URL}/dashboardUser

# Pantalla de inicio para proveedores autenticados
FRONTEND_PROVIDER_HOME=${FRONTEND_BASE_URL}/dashboardProvider

# Pantalla de inicio para administradores
FRONTEND_ADMIN_HOME=${FRONTEND_BASE_URL}/dashboardAdmin
